#!/usr/bin/env ruby
lib_path = File.dirname(__FILE__) + "/../lib"
$:.unshift lib_path

require 'optparse'
require 'rubygems'
require 'hyde'

if ARGV.size == 0
  Hyde::CLICommands::Help.run
  exit
end

# Can error
controller = Hyde::CLICommands.get_controller ARGV[0]
params = ARGV[1..-1]
controller.run(*params)
